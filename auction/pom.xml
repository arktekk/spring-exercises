    <version>1.0-SNAPSHOT</version>
    <name>action Maven Webapp</name>
    <url>http://github.com/arktekk</url>
    <properties>
        <spring.version>3.0.5.RELEASE</spring.version>
        <jetty.version>7.3.0.v20110203</jetty.version>
